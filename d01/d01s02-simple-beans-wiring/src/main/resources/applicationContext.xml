<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="productRepository" class="com.ing.springboot.training.d01.s02.repository.ProductRepository"/>

    <bean id="productService" class="com.ing.springboot.training.d01.s02.service.ProductService">
        <constructor-arg ref="productRepository"/>
    </bean>
</beans>